<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jcache-spring="https://raw.github.com/jsr107/jcache-annotations/schema/jcache-spring"
       xsi:schemaLocation="https://raw.github.com/jsr107/jcache-annotations/schema/jcache-spring https://raw.github.com/jsr107/RI/master/cache-annotations-ri/cache-annotations-ri-spring/src/main/resources/org/jsr107/ri/interceptor/spring/jcache-spring-1.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <jcache-spring:annotation-driven proxy-target-class="true"/>

    <bean id="cacheProvider" class="javax.cache.Caching"
          factory-method="getCachingProvider"/>

    <bean class="manager.CacheNameOnEachMethodBlogManagerImpl"/>
    <bean class="manager.ClassLevelCacheConfigBlogManagerImpl"/>
    <bean class="manager.UsingDefaultCacheNameBlogManagerImpl"/>
</beans>